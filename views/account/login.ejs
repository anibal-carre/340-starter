<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <main class="login-container">
        <h1>
            <%= title %>
        </h1>

        <% if (messages && messages.length> 0) { %>
            <div class="flash-message">
                <% messages.forEach(function(message){ %>
                    <p>
                        <%= message %>
                    </p>
                    <% }) %>
            </div>
            <% } %>

                <form id="loginForm" action="/account/login" method="post" class="login-form">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="account_email" required>

                    <label for="password">Password:</label>
                    <div class="password-requirements">
                        Passwords must be at least <strong>12 characters</strong>
                        and contain at least <strong>1 number</strong>,
                        <strong>1 uppercase letter</strong>, and
                        <strong>1 special character</strong>.
                    </div>

                    <input type="password" id="password" name="account_password" required
                        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

                    <button type="submit">Login</button>
                </form>

                <p>No account? <a href="/account/register">Sign-up</a></p>
    </main>
</body>

</html>